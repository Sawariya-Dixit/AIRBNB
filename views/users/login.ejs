    border-top: 4px solid #ff385c; /* âœ… Added red top border */
  }

  .login-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
  }

  .login-card h2 {
    font-weight: 700;
    color: #ff385c;
  }

